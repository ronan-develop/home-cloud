{% extends 'base.html.twig' %}

{% block title %}Accueil - Galerie Photo{% endblock %}

{% block body %}
  <div class="bg-gray-100 min-h-[60vh] flex flex-col items-center justify-center py-16">
    <h2 class="text-2xl font-semibold text-gray-700 mb-4">Mes photos</h2>
    <div class="w-full max-w-6xl">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {% for photo in photos %}
          <figure class="relative group">
            <img
              src="{{ path('photo_view', {id: photo.id}) }}"
              alt="{{ photo.title ?? photo.originalName }}"
              loading="lazy"
              class="w-full h-auto object-cover rounded shadow-sm transition-transform duration-200 group-hover:scale-105"
            >
            {% if photo.title %}
              <figcaption class="absolute bottom-0 left-0 w-full bg-black/60 text-white text-xs p-1 truncate">{{ photo.title }}</figcaption>
            {% endif %}
          </figure>
        {% else %}
          <div class="col-span-full text-center text-gray-400 py-8">Aucune photo à afficher.</div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
