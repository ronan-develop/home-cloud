{% extends 'base.html.twig' %}

{% block title %}Ajouter une photo - MyPhotos
{% endblock %}

{% block body %}
	<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded shadow">
		<h1 class="text-2xl font-bold mb-4">Ajouter une photo</h1>
		{% for message in app.flashes('success') %}
			<div class="bg-green-100 text-green-800 px-4 py-2 rounded mb-4">{{ message }}</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4">{{ message }}</div>
		{% endfor %}
		{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
		<div class="mb-4">
			{{ form_row(form.file) }}
		</div>
		<div class="mb-4">
			{{ form_row(form.title) }}
		</div>
		<div class="mb-4">
			{{ form_row(form.description) }}
		</div>
		<div class="mb-4">
			{{ form_row(form.isFavorite) }}
		</div>
		{{ form_rest(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
